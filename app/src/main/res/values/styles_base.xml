<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="dividerStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/divider_line_size</item>
        <item name="android:background">@color/divider</item>
        <item name="android:layout_marginTop">@dimen/interval_size_m</item>
    </style>

    <style name="et_base_login">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">88px</item>
        <item name="android:background"></item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textColorHint">@color/white</item>
        <item name="android:textSize">@dimen/font_size_34</item>
        <item name="android:includeFontPadding">false</item>
    </style>

    <!-- 宽高不固定 适用于约束布局 -->
    <style name="button_login_base">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/login_font_button_size</item>
        <item name="android:textColor">@color/white</item>
    </style>

</resources>
