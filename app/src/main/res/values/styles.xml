<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="BaseAppTheme">
        <item name="android:background">@color/transparent</item>
    </style>

    <style name="mySimpleNoTitleDialog" parent="Theme.AppCompat.Dialog">
        <!-- 是否有边框 -->
        <item name="android:windowFrame">@null</item>
        <!--是否在悬浮Activity之上  -->
        <item name="android:windowIsFloating">true</item>
        <!--标题  -->
        <item name="android:windowNoTitle">false</item>
        <!--阴影  -->
        <item name="android:windowIsTranslucent">true</item>
        <!--透明背景-->
        <item name="android:background">@android:color/transparent</item>
        <!--窗口背景透明-->
        <item name="android:windowBackground">@android:color/transparent</item>
        <!--弹窗背景是否变暗-->
        <item name="android:backgroundDimEnabled">true</item>
    </style>

    <style name="MyCityPickerTheme" parent="CityPickerTheme">
        <!--城市列表样式-->
        <item name="cpListItemHeight">76px</item>
        <item name="cpListItemTextSize">28px</item>
        <item name="cpListItemTextColor">@color/text_normal</item>

        <!--  热门城市  -->
        <item name="cpGridItemSpace">@dimen/interval_size_xs</item>

        <!-- 悬浮栏 -->
        <item name="cpSectionTextSize">@dimen/font_size_28</item>
        <item name="cpSectionBackground">@color/white</item>

        <!-- 分割线 -->
        <item name="mCpDividerBackground">@color/city_picker_divider_bg</item>

        <!--右侧字母索引-->
        <item name="cpIndexBarTextSize">@dimen/font_size_22</item>
        <item name="cpIndexBarSelectedTextColor">@color/white</item>
    </style>

    <style name="login_iv_icon">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:scaleType">centerCrop</item>
        <item name="android:layout_marginStart">14px</item>
        <item name="android:layout_marginBottom">152px</item>
    </style>

    <style name="login_iv_brand">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:scaleType">centerCrop</item>
    </style>

    <style name="login_tv_phoneNumber">
        <item name="android:layout_width">0px</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center</item>
        <item name="android:includeFontPadding">false</item>
        <item name="android:textSize">@dimen/login_font_phone_size</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:layout_marginBottom">@dimen/login_divider_phoneNumberET_button</item>
        <item name="android:layout_marginTop">145px</item>
    </style>


    <style name="login_bt_machine" parent="button_login_base">
        <item name="android:background">@drawable/sr_login_button_machine</item>
        <item name="android:text">@string/login_by_machine</item>
        <item name="android:layout_marginTop">@dimen/interval_size_m</item>
    </style>

    <style name="login_bt_by_other" parent="button_login_base">
        <item name="android:background">@drawable/sr_stroke_1px_full_raduis_white</item>
        <item name="android:layout_marginTop">@dimen/interval_size_s</item>
        <item name="android:text">@string/login_by_other</item>
    </style>

    <style name="login_tv_tip">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:includeFontPadding">false</item>
        <item name="android:text">@string/login_tip</item>
        <item name="android:textSize">@dimen/font_size_28</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:layout_marginTop">@dimen/interval_size_s</item>
        <item name="android:maxLines">2</item>
    </style>

    <style name="login_tv_tip_bottom">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center</item>
        <item name="android:includeFontPadding">false</item>
        <item name="android:text">@string/login_tip_bottom</item>
        <item name="android:textSize">@dimen/font_size_20</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:layout_marginTop">@dimen/interval_size_s</item>
    </style>

    <style name="login_tv_tip_other">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center</item>
        <item name="android:includeFontPadding">false</item>
        <item name="android:text">@string/login_tip_login_by_other</item>
        <item name="android:textSize">@dimen/font_size_26</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:layout_marginBottom">@dimen/interval_size_s</item>
    </style>

    <style name="login_tv_by_phone">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/login_font_by_phone</item>
        <item name="android:includeFontPadding">false</item>
        <item name="android:text">@string/login_by_phone</item>
    </style>


    <style name="login_et_phoneNumber" parent="et_base_login">
        <item name="android:hint">@string/input_phoneNumber</item>
        <item name="android:includeFontPadding">false</item>
        <item name="android:layout_marginTop">@dimen/login_interval_size_loginByPhone_phoneET</item>
    </style>

    <style name="login_et_verification" parent="et_base_login">
        <item name="android:hint">@string/input_phoneNumber</item>
        <item name="android:layout_marginTop">@dimen/interval_size_m</item>
    </style>

    <style name="login_bt_login" parent="button_login_base">
        <item name="android:background">@drawable/sr_login_bt_login_unable</item>
        <item name="android:text">@string/login</item>
        <item name="android:layout_marginTop">@dimen/login_interval_size_verificationET_loginBT</item>
    </style>

    <style name="login_bt_get_verification">
        <item name="android:layout_width">@dimen/login_bt_getVerification_width</item>
        <item name="android:layout_height">@dimen/login_bt_getVerification_height</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/font_size_24</item>
        <item name="android:text">@string/get_verification</item>
        <item name="sSelectorNormalColor">@color/transparent</item>
        <item name="sSelectorPressedColor">@color/gray</item>
        <item name="android:background">@drawable/sr_stroke_1px_full_raduis_white</item>
        <item name="android:layout_marginBottom">@dimen/login_bt_getVerification_marginBottom</item>
    </style>

    <style name="main_tab_bottom">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/main_tab_height</item>
        <item name="android:background">@color/white</item>
        <item name="android:textSize">22px</item>
    </style>

    <style name="mine_head_portrait">
        <item name="android:layout_width">@dimen/mine_head_icon_size</item>
        <item name="android:layout_height">@dimen/mine_head_icon_size</item>
        <item name="android:scaleType">centerCrop</item>
    </style>

    <style name="mine_head_icon">
        <item name="android:layout_width">44px</item>
        <item name="android:layout_height">44px</item>
        <item name="android:scaleType">centerCrop</item>
    </style>

    <style name="card_grid_recycler_view">
        <item name="android:padding">@dimen/font_size_28</item>
        <item name="android:shadowColor">#80e6e6e6</item>
        <item name="android:shadowDx">0</item>
        <item name="android:shadowDy">3</item>
    </style>

    <style name="waimaiRecommendedTabSegment">
        <item name="tabIndicatorColor">?attr/colorAccent</item>
        <item name="tabIndicatorHeight">1dp</item>
        <item name="tabPaddingStart">20px</item>
        <item name="tabPaddingEnd">20px</item>
        <item name="android:background">@color/background</item>
        <item name="tabBackground">@color/transparent</item>
        <item name="tabTextAppearance">@style/TabText</item>
        <item name="tabSelectedTextColor">@color/text_normal</item>
        <item name="tabTextColor">@color/text_tip</item>
    </style>

    <style name="shopDetailTabSegment">
        <item name="tabIndicatorColor">?attr/colorAccent</item>
        <item name="tabIndicatorHeight">6px</item>
        <item name="tabPaddingStart">20px</item>
        <item name="tabPaddingEnd">20px</item>
        <item name="android:background">@color/white</item>
        <item name="tabBackground">@color/transparent</item>
        <item name="tabTextAppearance">@style/TabText</item>
        <item name="tabSelectedTextColor">@color/text_normal</item>
        <item name="tabTextColor">@color/text_uncheck</item>
    </style>

    <style name="TabText">
        <item name="android:textColor">@color/text_normal</item>
        <item name="android:textSize">@dimen/font_size_36</item>
    </style>

    <style name="score_stat">
        <item name="android:layout_width">20px</item>
        <item name="android:layout_height">20px</item>
        <item name="android:layout_marginStart">2px</item>
    </style>

    <style name="limited_fragment_introduce_tv">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">22px</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:drawablePadding">9px</item>
        <item name="android:includeFontPadding">false</item>
    </style>

    <style name="text_shop_evaluation_score_type">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/text_uncheck</item>
        <item name="android:textSize">@dimen/font_size_22</item>
        <item name="android:includeFontPadding">false</item>
    </style>

    <style name="text_shop_evaluation_score_value">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/text_normal</item>
        <item name="android:textSize">@dimen/font_size_36</item>
        <item name="android:includeFontPadding">false</item>
    </style>

    <color name="city_picker_divider_bg">#F1F1F1</color>
</resources>
