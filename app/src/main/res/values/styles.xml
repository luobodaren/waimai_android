<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="BaseAppTheme">
        <item name="android:background">@color/background</item>
    </style>

    <style name="login_iv_icon">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:scaleType">centerCrop</item>
        <item name="android:layout_marginStart">7dp</item>
        <item name="android:layout_marginBottom">76dp</item>
    </style>

    <style name="login_iv_brand">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:scaleType">centerCrop</item>
    </style>

    <style name="login_tv_phoneNumber">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center</item>
        <item name="android:includeFontPadding">false</item>
        <item name="android:textSize">@dimen/login_font_phone_size</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:layout_marginBottom">@dimen/login_divider_phoneNumberET_button</item>
        <item name="android:layout_marginTop">72.5dp</item>
    </style>


    <style name="login_bt_machine" parent="button_login_base">
        <item name="android:background">@drawable/sr_login_button_machine</item>
        <item name="android:text">@string/login_by_machine</item>
        <item name="android:layout_marginTop">@dimen/interval_size_m</item>
    </style>

    <style name="login_bt_by_other" parent="button_login_base">
        <item name="android:background">@drawable/sr_bt_1dp_stroke</item>
        <item name="android:layout_marginTop">@dimen/interval_size_s</item>
        <item name="android:text">@string/login_by_other</item>
    </style>

    <style name="login_tv_tip">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:includeFontPadding">false</item>
        <item name="android:text">@string/login_tip</item>
        <item name="android:textSize">@dimen/font_size_14</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:layout_marginTop">@dimen/interval_size_s</item>
        <item name="android:maxLines">2</item>
    </style>

    <style name="login_tv_tip_bottom">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center</item>
        <item name="android:includeFontPadding">false</item>
        <item name="android:text">@string/login_tip_bottom</item>
        <item name="android:textSize">@dimen/font_size_10</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:layout_marginTop">@dimen/interval_size_s</item>
    </style>

    <style name="login_tv_tip_other">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center</item>
        <item name="android:includeFontPadding">false</item>
        <item name="android:text">@string/login_tip_login_by_other</item>
        <item name="android:textSize">@dimen/font_size_13</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:layout_marginBottom">@dimen/interval_size_s</item>
    </style>

    <style name="login_tv_by_phone">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/login_font_by_phone</item>
        <item name="android:includeFontPadding">false</item>
        <item name="android:text">@string/login_by_phone</item>
    </style>


    <style name="login_et_phoneNumber" parent="et_base_login">
        <item name="android:hint">@string/input_phoneNumber</item>
        <item name="android:includeFontPadding">false</item>
        <item name="android:layout_marginTop">@dimen/login_interval_size_loginByPhone_phoneET</item>
    </style>

    <style name="login_et_verification" parent="et_base_login">
        <item name="android:hint">@string/input_phoneNumber</item>
        <item name="android:layout_marginTop">@dimen/interval_size_m</item>
    </style>

    <style name="login_bt_login" parent="button_login_base">
        <item name="android:background">@drawable/sr_login_bt_login_unable</item>
        <item name="android:text">@string/login</item>
        <item name="android:layout_marginTop">@dimen/login_interval_size_verificationET_loginBT</item>
    </style>

    <style name="login_bt_get_verification">
        <item name="android:layout_width">@dimen/login_bt_getVerification_width</item>
        <item name="android:layout_height">@dimen/login_bt_getVerification_height</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/font_size_12</item>
        <item name="android:text">@string/get_verification</item>
        <item name="sSelectorNormalColor">@color/transparent</item>
        <item name="sSelectorPressedColor">@color/gray</item>
        <item name="android:background">@drawable/sr_bt_1dp_stroke</item>
        <item name="android:layout_marginBottom">@dimen/login_bt_getVerification_marginBottom</item>
    </style>

    <style name="main_tab_bottom">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/main_tab_height</item>
        <item name="android:background">@drawable/sr_main_tab_bg_panel</item>
        <item name="android:textSize">11sp</item>
    </style>

    <style name="mine_head_portrait">
        <item name="android:layout_width">@dimen/mine_head_icon_size</item>
        <item name="android:layout_height">@dimen/mine_head_icon_size</item>
        <item name="android:scaleType">centerCrop</item>
    </style>

    <style name="mine_head_icon">
        <item name="android:layout_width">22dp</item>
        <item name="android:layout_height">22dp</item>
        <item name="android:scaleType">fitCenter</item>
    </style>

    <style name="card_grid_recycler_view">
        <item name="android:background">@drawable/sr_card_recycler_view_bg</item>
        <item name="android:padding">@dimen/font_size_16</item>
        <item name="android:shadowColor">#80e6e6e6</item>
        <item name="android:shadowDx">0</item>
        <item name="android:shadowDy">3</item>
    </style>

</resources>
