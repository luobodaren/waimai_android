<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="BaseAppTheme">
        <item name="android:background">@color/transparent</item>

        <!--标题栏的背景图片，优先使用背景图片，没有背景图片才使用背景颜色，可选-->
        <item name="xpage_actionbar_background">@null</item>
        <!--标题栏的背景颜色-->
        <item name="xpage_actionbar_color">@color/white</item>
        <!--是否支持沉浸式标题栏, 默认false-->
        <item name="xpage_actionbar_immersive">false</item>
        <!--标题栏返回箭头, 默认R.drawable.xpage_ic_navigation_back_white-->
        <item name="xpage_actionbar_navigation_back">@drawable/ic_arrow_left_black</item>
        <!--标题栏的高度，默认52dp-->
        <item name="xpage_actionbar_height">@dimen/titlebar_height</item>
        <!--标题栏标题文字的大小，默认18sp-->
        <item name="xpage_actionbar_title_text_size">@dimen/titlebar_text_size</item>
        <!--标题栏副标题文字的大小，默认12sp-->
        <item name="xpage_actionbar_sub_text_size">14sp</item>
        <!--标题栏动作文字的大小，默认15sp-->
        <item name="xpage_actionbar_action_text_size">18sp</item>
        <!--标题栏动作图片的padding，默认5dp-->
        <item name="xpage_actionbar_action_padding">6dp</item>
        <!--标题栏两侧文字的padding，默认14dp-->
        <item name="xpage_actionbar_side_text_padding">16dp</item>
        <!--        <item name="XPageTitleBarStyle">@style/XPageTitleBar.Custom</item>-->

        <item name="xui_bottom_sheet_grid_item_paddingTop">25dp</item>
        <item name="xui_bottom_sheet_grid_item_paddingBottom">25dp</item>

        <item name="xui_bottom_sheet_grid_item_icon_size">26dp</item>
        <item name="xui_bottom_sheet_grid_item_icon_marginTop">0dp</item>
        <item name="xui_bottom_sheet_grid_item_icon_marginBottom">5dp</item>

        <item name="xui_bottom_sheet_button_height">44dp</item>
        <item name="xui_bottom_sheet_button_text_size">15dp</item>
        <item name="xui_bottom_sheet_button_text_color">@color/text_normal</item>
        <item name="xui_bottom_sheet_button_background">@color/white</item>
        <item name="xui_bottom_sheet_grid_padding_vertical">15dp</item>
        <item name="xui_bottom_sheet_grid_item_text_appearance">
            @style/xui_bottom_sheet_grid_item_text
        </item>

        <item name="xui_bottom_sheet_list_item_text_style">
            @style/xui_bottom_sheet_list_item_text_style
        </item>
    </style>

