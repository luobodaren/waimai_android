<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!--图片选择的主题，注意每一项都不能少-->
    <style name="XUIPictureStyle" parent="XUITheme.Phone">
        <!-- Customize your theme here. -->
        <!--标题栏背景色-->
        <item name="colorPrimary">@color/text_normal</item>
        <!--状态栏背景色-->
        <item name="colorPrimaryDark">@color/white</item>
        <!--是否改变图片列表界面状态栏字体颜色为黑色-->
        <item name="picture_statusFontColor">true</item>
        <!--返回键图标-->
        <item name="picture_leftBack_icon">@drawable/ic_arrow_left_black</item>
        <!--title图标文字的padding-->
        <item name="picture_title_action_padding">?attr/xui_actionbar_side_text_padding</item>
        <!--标题下拉箭头-->
        <item name="picture_arrow_down_icon">@drawable/ic_arrow_down_gray</item>
        <!--标题上拉箭头-->
        <item name="picture_arrow_up_icon">@drawable/ic_arrow_up_gray</item>
        <!--标题文字颜色-->
        <item name="picture_title_textColor">@color/text_normal</item>
        <!--标题栏右边文字-->
        <item name="picture_right_textColor">@color/text_normal</item>
        <!--标题文字大小-->
        <item name="picture_title_textSize">?attr/xui_actionbar_title_text_size</item>
        <!--标题栏右边文字大小-->
        <item name="picture_right_textSize">?attr/xui_actionbar_action_text_size</item>
        <!--标题文字是否加粗-->
        <item name="picture_title_text_bold">false</item>
        <!--标题栏右边文字是否加粗-->
        <item name="picture_right_text_bold">false</item>
        <!--图片列表勾选样式-->
        <item name="picture_checked_style">@drawable/sr_picture_selected_custom_icon_checkbox</item>
        <!--开启图片列表勾选数字模式,开启的话勾选样式要换-->
        <item name="picture_style_checkNumMode">false</item>
        <!--选择图片样式0/9-->
        <item name="picture_style_numComplete">false</item>
        <!--图片列表底部背景色-->
        <item name="picture_bottom_bg">@color/background</item>
        <!--图片列表预览文字颜色-->
        <item name="picture_preview_textColor">@color/picture_tab_text_color</item>
        <!--图片列表已完成文字颜色-->
        <item name="picture_complete_textColor">@color/picture_tab_text_color</item>
        <!--图片已选数量圆点背景色-->
        <item name="picture_num_style">@drawable/sr_bg_picture_dot_oval</item>
        <!--预览界面标题栏背景色-->
        <item name="picture_ac_preview_title_bg">@color/white</item>
        <!--预览界面标题文字颜色-->
        <item name="picture_ac_preview_title_textColor">@color/text_normal</item>
        <!--预览界面标题文字大小-->
        <item name="picture_ac_preview_title_textSize">?attr/xui_actionbar_title_text_size</item>
        <!--预览界面标题文字是否加粗-->
        <item name="picture_ac_preview_title_text_bold">false</item>
        <!--预览界面已完成文字颜色-->
        <item name="picture_ac_preview_complete_textColor">@color/picture_tab_text_color</item>
        <!--预览界面底部背景色-->
        <item name="picture_ac_preview_bottom_bg">@color/white</item>
        <!--预览界面返回箭头-->
        <item name="picture_preview_leftBack_icon">@drawable/ic_arrow_left_black</item>
        <!--裁剪页面标题背景色-->
        <item name="picture_crop_toolbar_bg">@color/white</item>
        <!--裁剪页面状态栏颜色-->
        <item name="picture_crop_status_color">@color/white</item>
        <!--裁剪页面标题文字颜色-->
        <item name="picture_crop_title_color">@color/text_tip</item>
        <!--相册文件夹列表选中图标-->
        <item name="picture_folder_checked_dot">@drawable/sr_bg_picture_dot_oval</item>
    </style>

    <!--图片选择的主题，注意每一项都不能少-->
    <style name="XUIPictureStyle.Custom">
        <item name="colorAccent">@color/white</item>
        <!--应用的主要色调，actionBar默认使用该颜色，Toolbar导航栏的底色-->
        <item name="colorPrimary">@color/white</item>
        <!--应用的主要暗色调，statusBarColor默认使用该颜色-->
        <item name="colorPrimaryDark">@color/white</item>
        <item name="colorControlNormal">@color/xui_config_color_control_normal</item>

        <!--图片列表勾选样式-->
        <item name="picture_checked_style">@drawable/sr_picture_selected_custom_icon_checkbox</item>
    </style>

</resources>