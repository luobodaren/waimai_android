<?xml version="1.0" encoding="utf-8"?>
<com.life.base.views.UiAdapterRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:id="@+id/card_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:layout_marginStart="32px"
        android:layout_marginBottom="4dp"
        android:layout_marginEnd="4dp"
        app:cardElevation="4dp"
        app:cardCornerRadius="50dp">
        <TextView
            android:id="@+id/tv_tag"
            style="@style/text_my_simple_style"
            android:gravity="center"
            android:drawablePadding="16px"
            android:background="@drawable/sr_bg_full_corners_white"
            android:paddingStart="@dimen/interval_size_xs"
            android:paddingEnd="40px"
            android:paddingTop="20px"
            android:paddingBottom="20px"
            android:textSize="28px"
            android:textColor="@color/text_normal"
            tools:text="60å‡25" />


        <ImageView
            android:id="@+id/iv_selected_sign"
            android:layout_width="20px"
            android:layout_height="20px"
            android:src="@drawable/ic_like"
            android:layout_gravity="right|top"
            android:layout_marginTop="8px"
            android:layout_marginEnd="16px"
            android:layout_alignRight="@id/card_view"
            android:visibility="gone"/>

    </androidx.cardview.widget.CardView>


</com.life.base.views.UiAdapterRelativeLayout>