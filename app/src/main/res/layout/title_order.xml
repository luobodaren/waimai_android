<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <data>

    </data>

    <RelativeLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="@dimen/titlebar_height">

        <TextView
            style="@style/text_my_simple_style"
            android:textSize="@dimen/titlebar_text_size"
            android:textColor="@color/text_normal"
            android:textStyle="bold"
            android:text="@string/order"
            android:layout_centerInParent="true" />

        <ImageView
            android:id="@+id/iv_search"
            android:layout_width="40px"
            android:layout_height="40px"
            android:src="@drawable/ic_search_black"
            android:layout_marginEnd="34px"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true" />


        <EditText
            android:id="@+id/et"
            android:layout_width="match_parent"
            android:layout_height="60px"
            android:background="@drawable/sr_bg_full_corners_gray"
            android:drawableLeft="@drawable/ic_search_gray"
            android:drawablePadding="8px"
            android:layout_marginStart="@dimen/interval_size_xs"
            android:layout_marginEnd="@dimen/interval_size_xs"
            android:layout_centerInParent="true"
            android:hint="@string/search_my_order"
            android:textSize="@dimen/font_size_24"
            android:textColor="@color/text_tip"
            android:textColorHint="@color/text_tip"
            android:visibility="gone" />

    </RelativeLayout>
</layout>