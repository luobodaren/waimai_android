<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

    </data>

    <com.life.base.views.UiAdapterConstrainLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/sr_bg_bl_br_12dp_black"
        android:orientation="vertical"
        android:paddingStart="@dimen/interval_size_xs"
        android:paddingEnd="@dimen/interval_size_xs"
        android:paddingBottom="40px">

        <TextView
            android:id="@+id/tv_title"
            style="@style/text_my_simple_style"
            android:layout_marginTop="104px"
            android:text="@string/direct_function"
            android:textColor="@color/white"
            android:textSize="36px"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/iv_close"
            android:layout_width="44px"
            android:layout_height="44px"
            android:src="@drawable/ic_close_white"
            app:layout_constraintBottom_toBottomOf="@id/tv_title"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@id/tv_title" />

        <LinearLayout
            android:id="@+id/ll_waimai"
            android:layout_width="166px"
            android:layout_height="166px"
            android:layout_marginTop="50px"
            android:background="@drawable/sr_bg_8dp_20white"
            android:gravity="center"
            android:orientation="vertical"
            app:layout_constraintEnd_toStartOf="@id/ll_mall"
            app:layout_constraintHorizontal_chainStyle="packed"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tv_title">

            <ImageView
                android:id="@+id/iv_waimai"
                android:layout_width="62px"
                android:layout_height="62px"
                android:src="@drawable/ic_direct_function_waimai" />

            <TextView
                android:id="@+id/tv_waimai"
                style="@style/text_my_simple_style"
                android:layout_marginTop="16px"
                android:text="@string/waimai"
                android:textColor="@color/white"
                android:textSize="30px" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_mall"
            android:layout_width="166px"
            android:layout_height="166px"
            android:layout_marginStart="13px"
            android:background="@drawable/sr_bg_8dp_20white"
            android:gravity="center"
            android:orientation="vertical"
            app:layout_constraintEnd_toStartOf="@id/ll_mine"
            app:layout_constraintStart_toEndOf="@id/ll_waimai"
            app:layout_constraintTop_toTopOf="@id/ll_waimai">

            <ImageView
                android:id="@+id/iv_mall"
                android:layout_width="62px"
                android:layout_height="62px"
                android:src="@drawable/ic_direct_function_mall" />

            <TextView
                android:id="@+id/tv_mall"
                style="@style/text_my_simple_style"
                android:layout_marginTop="16px"
                android:text="@string/mall"
                android:textColor="@color/white"
                android:textSize="30px" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_mine"
            android:layout_width="166px"
            android:layout_height="166px"
            android:layout_marginStart="13px"
            android:background="@drawable/sr_bg_8dp_20white"
            android:gravity="center"
            android:orientation="vertical"
            app:layout_constraintEnd_toStartOf="@id/ll_shopping_cart"
            app:layout_constraintStart_toEndOf="@id/ll_mall"
            app:layout_constraintTop_toTopOf="@id/ll_waimai">

            <ImageView
                android:id="@+id/iv_mine"
                android:layout_width="62px"
                android:layout_height="62px"
                android:src="@drawable/ic_direct_function_mine" />

            <TextView
                android:id="@+id/tv_mine"
                style="@style/text_my_simple_style"
                android:layout_marginTop="16px"
                android:text="@string/mine"
                android:textColor="@color/white"
                android:textSize="30px" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_shopping_cart"
            android:layout_width="166px"
            android:layout_height="166px"
            android:layout_marginStart="13px"
            android:background="@drawable/sr_bg_8dp_20white"
            android:gravity="center"
            android:orientation="vertical"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/ll_mine"
            app:layout_constraintTop_toTopOf="@id/ll_waimai">

            <ImageView
                android:id="@+id/iv_shopping_cart"
                android:layout_width="62px"
                android:layout_height="62px"
                android:src="@drawable/ic_shopping_cart_white" />

            <TextView
                android:id="@+id/tv_shopping_cart"
                style="@style/text_my_simple_style"
                android:layout_marginTop="16px"
                android:text="@string/shopping_cart"
                android:textColor="@color/white"
                android:textSize="30px" />
        </LinearLayout>


        <LinearLayout
            android:id="@+id/ll_message"
            android:layout_width="166px"
            android:layout_height="166px"
            android:layout_marginTop="30px"
            android:background="@drawable/sr_bg_8dp_20white"
            android:gravity="center"
            android:orientation="vertical"
            app:layout_constraintEnd_toStartOf="@id/ll_share"
            app:layout_constraintHorizontal_chainStyle="packed"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/ll_waimai">

            <ImageView
                android:id="@+id/iv_message"
                android:layout_width="62px"
                android:layout_height="62px"
                android:src="@drawable/ic_message_white" />

            <TextView
                android:id="@+id/tv_message"
                style="@style/text_my_simple_style"
                android:layout_marginTop="16px"
                android:text="@string/message"
                android:textColor="@color/white"
                android:textSize="30px" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_share"
            android:layout_width="166px"
            android:layout_height="166px"
            android:layout_marginStart="13px"
            android:background="@drawable/sr_bg_8dp_20white"
            android:gravity="center"
            android:orientation="vertical"
            app:layout_constraintEnd_toStartOf="@id/ll_feedback"
            app:layout_constraintStart_toEndOf="@id/ll_message"
            app:layout_constraintTop_toTopOf="@id/ll_message">

            <ImageView
                android:id="@+id/iv_share"
                android:layout_width="62px"
                android:layout_height="62px"
                android:src="@drawable/ic_share_white" />

            <TextView
                android:id="@+id/tv_share"
                style="@style/text_my_simple_style"
                android:layout_marginTop="16px"
                android:text="@string/share"
                android:textColor="@color/white"
                android:textSize="30px" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_feedback"
            android:layout_width="166px"
            android:layout_height="166px"
            android:layout_marginStart="16px"
            android:background="@drawable/sr_bg_8dp_20white"
            android:gravity="center"
            android:orientation="vertical"
            app:layout_constraintEnd_toStartOf="@id/ll_empty"
            app:layout_constraintStart_toEndOf="@id/ll_share"
            app:layout_constraintTop_toTopOf="@id/ll_message">

            <ImageView
                android:id="@+id/iv_feedback"
                android:layout_width="62px"
                android:layout_height="62px"
                android:src="@drawable/ic_feedback" />

            <TextView
                android:id="@+id/tv_feedback"
                style="@style/text_my_simple_style"
                android:layout_marginTop="16px"
                android:text="@string/feedback"
                android:textColor="@color/white"
                android:textSize="30px" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_empty"
            android:layout_width="166px"
            android:layout_height="166px"
            android:layout_marginStart="16px"
            android:orientation="vertical"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/ll_feedback"
            app:layout_constraintTop_toTopOf="@id/ll_message">

        </LinearLayout>

    </com.life.base.views.UiAdapterConstrainLayout>
</layout>