<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:id="@+id/search_layout"
        android:layout_width="match_parent"
        android:layout_height="88px"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:paddingStart="@dimen/interval_size_xs"
        android:paddingEnd="@dimen/interval_size_xs">

        <ImageView
            android:id="@+id/iv_left_action"
            android:layout_width="44px"
            android:layout_height="44px"
            android:src="@drawable/ic_arrow_left_white"/>

        <TextView
            android:id="@+id/tv_type_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:includeFontPadding="false"
            android:layout_marginStart="8px"
            android:textSize="36px"
            android:textColor="@color/white"
            tools:text="健康美食"/>

        <EditText
            android:id="@+id/et_search"
            android:layout_width="0dp"
            android:layout_height="60px"
            android:layout_weight="1"
            android:drawableStart="@drawable/ic_search_white"
            android:drawablePadding="8px"
            android:background="@drawable/sr_bg_search_translate"
            android:gravity="center_vertical"
            android:layout_marginStart="@dimen/interval_size_xs"
            android:paddingStart="@dimen/interval_size_xs"
            android:paddingEnd="0px"
            android:textSize="@dimen/font_size_26"
            android:hint="搜索你需要的商品热门关键词"
            android:textColorHint="@color/white"/>

        <ImageView
            android:id="@+id/iv_share"
            android:layout_width="44px"
            android:layout_height="44px"
            android:src="@drawable/ic_share"
            android:layout_marginStart="80px"/>

    </LinearLayout>

</LinearLayout>