<?xml version="1.0" encoding="utf-8"?>
<com.example.base.views.UiAdapterLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:gravity="center_horizontal"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/iv_subtype_icon"
        android:layout_width="84px"
        android:layout_height="84px"
        android:scaleType="centerCrop"/>

    <TextView
        android:id="@+id/tv_subtype_name"
        android:layout_width="120px"
        android:layout_height="40px"
        android:layout_marginTop="16px"
        android:gravity="center"
        android:includeFontPadding="false"
        android:textColor="@color/white"
        android:textSize="@dimen/waimai_subtype_recycler_item_text_size"/>


</com.example.base.views.UiAdapterLinearLayout>