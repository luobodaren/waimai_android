<?xml version="1.0" encoding="utf-8"?>
<com.life.base.views.UiAdapterLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:gravity="center_horizontal"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/iv_subtype_icon"
        android:layout_width="84px"
        android:layout_height="84px"
        android:scaleType="centerCrop"/>

    <TextView
        android:id="@+id/tv_subtype_name"
        android:layout_width="120px"
        android:layout_height="40px"
        android:layout_marginTop="16px"
        android:gravity="center"
        android:includeFontPadding="false"
        android:textColor="@color/white"
        android:textSize="@dimen/waimai_subtype_recycler_item_text_size"/>

    <LinearLayout
        android:id="@+id/ll_selected_sign"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        android:visibility="gone">
        <ImageView
            android:id="@+id/iv_selected_sign"
            android:layout_width="48px"
            android:layout_height="wrap_content"
            android:scaleType="centerInside"
            android:adjustViewBounds="true"
            android:src="@mipmap/ic_arrow_starlike"
            android:layout_marginTop="8px"
            android:visibility="invisible"/>

        <View
            android:id="@+id/view_tl_tr_24_radius"
            android:layout_width="match_parent"
            android:layout_height="8dp"
            android:background="@drawable/sr_bg_tl_tr_8dp"/>
    </LinearLayout>

</com.life.base.views.UiAdapterLinearLayout>