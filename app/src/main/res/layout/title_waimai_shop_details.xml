<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <data>
        <variable
            name="viewModel"
            type="com.life.waimaishuo.mvvm.vm.waimai.ShopDetailViewModel"/>
    </data>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="@dimen/titlebar_height"
        android:gravity="center_vertical">

        <ImageView
            android:id="@+id/iv_back"
            android:layout_width="44px"
            android:layout_height="44px"
            android:scaleType="center"
            android:src="@drawable/ic_arrow_left_white"
            android:layout_marginStart="24px"
            android:onClick="@{(v)->viewModel.onBackClick(v)}"/>

        <EditText
            android:id="@+id/et_search"
            android:layout_width="0dp"
            android:layout_height="60px"
            android:layout_weight="1"
            android:textSize="@dimen/font_size_26"
            android:hint="搜索你需要的商品热门关键词"
            android:background="@drawable/sr_bg_search_translate"
            android:gravity="center_vertical"
            android:drawableStart="@drawable/ic_search_white"
            android:drawablePadding="8px"
            android:layout_marginStart="@dimen/interval_size_xs"
            android:layout_marginEnd="@dimen/interval_size_xs"
            android:paddingStart="@dimen/interval_size_xs"
            android:paddingEnd="0px"
            android:textColorHint="@color/text_tip"/>

        <ImageView
            android:id="@+id/iv_search"
            android:layout_width="44px"
            android:layout_height="44px"
            android:scaleType="center"
            android:layout_marginEnd="24px"
            android:src="@drawable/ic_search_white" />

        <ImageView
            android:id="@+id/iv_collect"
            android:layout_width="44px"
            android:layout_height="44px"
            android:scaleType="center"
            android:layout_marginEnd="24px"
            android:src="@drawable/ic_collect_click"
            android:onClick="@{(v)->viewModel.onCollectClick(v)}"/>

        <ImageView
            android:id="@+id/iv_share"
            android:layout_width="44px"
            android:layout_height="44px"
            android:scaleType="center"
            android:layout_marginEnd="24px"
            android:src="@drawable/ic_share"
            android:onClick="@{(v)->viewModel.onShareClick(v)}"/>
    </LinearLayout>
</layout>