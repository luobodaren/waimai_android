<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
            name="viewModel"
            type="com.life.waimaishuo.mvvm.vm.waimai.WaiMaiViewModel" />
    </data>

    <!--嵌套滑动父控件-->
    <com.life.waimaishuo.views.StickyNavigationLayout
        android:id="@+id/sticky_navigation_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/sr_bg_gradient_theme_color"
        android:orientation="vertical"
        app:fitStatusBar="false">

        <androidx.core.widget.NestedScrollView
            android:id="@+id/top_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:overScrollMode="never">

            <LinearLayout
                android:id="@+id/my_ll_content_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <include
                    android:id="@+id/layout_title"
                    layout="@layout/title_location_with_function" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/sr_bg_waimai"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:paddingTop="@dimen/interval_size_xs">

                        <androidx.constraintlayout.widget.ConstraintLayout
                            android:id="@+id/search_layout"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:onClick="@{(v)->viewModel.onSearchBtClick(v)}">

                            <TextView
                                android:id="@+id/et_search"
                                android:layout_width="match_parent"
                                android:layout_height="68px"
                                android:layout_marginStart="@dimen/interval_size_xs"
                                android:layout_marginEnd="@dimen/interval_size_xs"
                                android:background="@drawable/sr_bg_search"
                                android:drawableStart="@drawable/ic_search_gray"
                                android:drawablePadding="8px"
                                android:gravity="center_vertical"
                                android:hint="搜索词"
                                android:paddingStart="24px"
                                android:textSize="26px"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintTop_toTopOf="parent" />

                            <Button
                                android:id="@+id/bt_search"
                                android:layout_width="108px"
                                android:layout_height="52px"
                                android:layout_marginEnd="8px"
                                android:background="@drawable/sr_bt_search"
                                android:clickable="false"
                                android:focusable="false"
                                android:text="@string/search"
                                android:textColor="@color/white"
                                android:textSize="26px"
                                app:layout_constraintBottom_toBottomOf="parent"
                                app:layout_constraintEnd_toEndOf="parent"
                                app:layout_constraintTop_toTopOf="parent" />

                        </androidx.constraintlayout.widget.ConstraintLayout>

                        <androidx.recyclerview.widget.RecyclerView
                            android:id="@+id/search_record"
                            style="@style/recycler_default"
                            android:layout_marginTop="16px" />

                        <com.xuexiang.xui.widget.banner.recycler.BannerLayout
                            android:id="@+id/banner_layout"
                            android:layout_width="match_parent"
                            android:layout_height="172px"
                            android:layout_marginTop="@dimen/interval_size_xs"
                            app:bl_autoPlaying="true"
                            app:bl_centerScale="1"
                            app:bl_itemSpace="0px"
                            app:bl_moveSpeed="1.8"
                            app:bl_showIndicator="false" />

                    </LinearLayout>

                    <!--                    <com.meetsl.scardview.SCardView-->
                    <!--                        android:layout_width="match_parent"-->
                    <!--                        android:layout_height="wrap_content"-->
                    <!--                        android:layout_marginTop="24px"-->
                    <!--                        android:layout_marginStart="24px"-->
                    <!--                        android:layout_marginEnd="24px"-->
                    <!--                        app:cardCornerRadius="8dp"-->
                    <!--                        app:cardElevation="6px"-->
                    <!--                        app:cardLightDirection="LT">-->
                    <!--                    </com.meetsl.scardview.SCardView>-->

                    <!--<com.meetsl.scardview.SCardView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="24px"
                        android:layout_marginStart="24px"
                        android:layout_marginEnd="24px">
                    </com.meetsl.scardview.SCardView>-->

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/recycler_food_type"
                        style="@style/recycler_default"
                        android:layout_marginStart="@dimen/interval_size_xs"
                        android:layout_marginTop="@dimen/interval_size_xs"
                        android:layout_marginEnd="@dimen/interval_size_xs"
                        android:background="@drawable/sr_bg_12dp_white"
                        android:paddingTop="@dimen/interval_size_xs"
                        android:paddingBottom="@dimen/interval_size_xs" />

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/recycler_my_exclusive"
                        style="@style/recycler_default"
                        android:layout_marginStart="@dimen/interval_size_xs"
                        android:layout_marginTop="@dimen/interval_size_xs"
                        android:layout_marginEnd="@dimen/interval_size_xs"
                        android:background="@drawable/sr_bg_12dp_white"
                        android:paddingStart="@dimen/interval_size_xs"
                        android:paddingTop="@dimen/interval_size_xs"
                        android:paddingBottom="@dimen/interval_size_xs"
                        android:visibility="gone" />

                    <!--<com.meetsl.scardview.SCardView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="24px"
                        android:layout_marginStart="24px"
                        android:layout_marginEnd="24px">
                    </com.meetsl.scardview.SCardView>-->

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:id="@+id/cl_activity_layout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="24px"
                        android:layout_marginTop="24px"
                        android:layout_marginEnd="24px"
                        android:background="@drawable/sr_bg_12dp_white"
                        android:visibility="gone">

                        <TextView
                            android:id="@+id/text2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="24px"
                            android:layout_marginTop="24px"
                            android:includeFontPadding="false"
                            android:text="限时秒杀"
                            android:textColor="@color/text_normal"
                            android:textSize="36px"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent" />

                        <include
                            layout="@layout/layout_counting_32px_theme"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="16px"
                            app:layout_constraintStart_toEndOf="@id/text2"
                            app:layout_constraintTop_toTopOf="@id/text2" />

                        <TextView
                            android:id="@+id/text3"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="12px"
                            android:includeFontPadding="false"
                            android:text="0元配送"
                            android:textColor="@color/text_normal"
                            android:textSize="36px"
                            app:layout_constraintStart_toStartOf="@id/guideline_50percent"
                            app:layout_constraintTop_toTopOf="@id/text2" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="8px"
                            android:background="@drawable/sr_bg_4radius_pink"
                            android:paddingStart="14px"
                            android:paddingTop="7px"
                            android:paddingEnd="14px"
                            android:paddingBottom="7px"
                            android:text="海量放心选择"
                            android:textColor="@color/colorTheme"
                            android:textSize="18px"
                            app:layout_constraintBottom_toBottomOf="@id/text3"
                            app:layout_constraintStart_toEndOf="@id/text3"
                            app:layout_constraintTop_toTopOf="@id/text3" />

                        <androidx.recyclerview.widget.RecyclerView
                            android:id="@+id/recycler_seconds_kill"
                            style="@style/recycler_default"
                            android:paddingStart="@dimen/interval_size_xs"
                            android:paddingTop="@dimen/interval_size_xs"
                            android:paddingBottom="@dimen/interval_size_xs"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@id/text2" />
                        <!--     fixme 需要居中调整     -->


                        <androidx.constraintlayout.widget.Guideline
                            android:id="@+id/guideline_50percent"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            app:layout_constraintGuide_percent="0.5" />

                    </androidx.constraintlayout.widget.ConstraintLayout>


                </LinearLayout>

            </LinearLayout>
        </androidx.core.widget.NestedScrollView>

        <!--TabLayout-->
        <com.xuexiang.xui.widget.tabbar.TabSegment
            android:id="@+id/sticky_view"
            style="@style/waimaiRecommendedTabSegment"
            android:layout_width="match_parent"
            android:layout_height="80px"
            android:paddingStart="@dimen/interval_size_xs"
            android:paddingTop="@dimen/interval_size_xs"
            android:paddingEnd="@dimen/interval_size_xs"
            android:visibility="gone" />

        <com.life.waimaishuo.views.SortTypeView
            android:id="@+id/content_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/background"
            android:paddingTop="30px"
            android:visibility="gone"
            app:showTabSegment="true" />

        <!--ViewPager-->
        <FrameLayout
            android:id="@+id/adaptive_size_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/background">

            <FrameLayout
                android:id="@+id/fl_state"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <androidx.viewpager.widget.ViewPager
                    android:id="@+id/viewPager"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />

            </FrameLayout>

        </FrameLayout>

    </com.life.waimaishuo.views.StickyNavigationLayout>

</layout>
