<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <data>

    </data>

    <LinearLayout
        android:id="@+id/ll_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/sr_bg_8dp_white"
        android:orientation="vertical">

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recycler_pay_type_list"
            style="@style/recycler_default"/>

        <TextView
            android:id="@+id/tv_show_more"
            style="@style/text_my_simple_style"
            android:layout_gravity="center_horizontal"
            android:layout_marginEnd="8px"
            android:drawableRight="@drawable/ic_arrow_down_black"
            android:layout_marginTop="40px"
            android:layout_marginBottom="40px"
            android:text="@string/more_pay_type"
            android:textColor="@color/text_uncheck"
            android:textSize="26px" />

    </LinearLayout>
</layout>
