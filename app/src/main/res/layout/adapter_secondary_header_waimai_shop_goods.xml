<?xml version="1.0" encoding="utf-8"?>
<com.life.base.views.UiAdapterLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="24px"
    android:background="@color/white">

    <TextView
        android:id="@+id/secondary_header"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:includeFontPadding="false"
        android:textColor="@color/text_normal"
        android:textSize="@dimen/shop_goods_text_size_grid_header"/>

    <TextView
        android:id="@+id/secondary_header_right"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:includeFontPadding="false"
        android:textColor="@color/text_tip"
        android:textSize="@dimen/shop_goods_text_size_grid_header_right"
        android:singleLine="true"
        android:layout_marginStart="16px"
        android:text="大家喜欢的，才是真好吃"/>

</com.life.base.views.UiAdapterLinearLayout>