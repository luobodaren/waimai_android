<?xml version="1.0" encoding="utf-8"?>
<com.life.base.views.UiAdapterLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:gravity="center_vertical"
    android:padding="24px">

    <FrameLayout
        android:id="@+id/cp_list_item_location_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:focusable="true"
        android:foreground="?attr/selectableItemBackground"
        tools:ignore="UselessParent">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:gravity="center_vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="?attr/cpListItemHeight"
                android:drawableLeft="@drawable/ic_local_black"
                android:drawablePadding="8px"
                android:gravity="center"
                android:textSize="?attr/cpListItemTextSize"
                android:textColor="?attr/cpListItemTextColor"
                android:text="@string/current_positioning_city"/>

            <TextView
                android:id="@+id/cp_list_item_location"
                android:layout_width="wrap_content"
                android:layout_height="?attr/cpListItemHeight"
                android:layout_marginStart="16px"
                android:gravity="center"
                android:textSize="?attr/cpListItemTextSize"
                android:textColor="?attr/cpListItemTextColor" />
        </LinearLayout>
    </FrameLayout>
</com.life.base.views.UiAdapterLinearLayout>