<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

    </data>

    <LinearLayout
        android:layout_width="702px"
        android:layout_height="545px"
        android:layout_marginTop="24px">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/iv_shopIcon"
                android:layout_width="36px"
                android:layout_height="36px"
                android:scaleType="centerCrop"
                android:layout_marginTop="33px"
                android:layout_marginStart="24px"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"/>

            <TextView
                android:id="@+id/tv_shopName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="30px"
                android:textColor="@color/black"
                android:layout_marginStart="12px"
                app:layout_constraintTop_toTopOf="@id/iv_shopIcon"
                app:layout_constraintBottom_toBottomOf="@id/iv_shopIcon"
                app:layout_constraintStart_toEndOf="@id/iv_shopIcon"
                />


            <TextView
                android:id="@+id/tv_order_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="26px"
                android:textColor="@color/text_tip"
                android:layout_marginStart="12px"
                app:layout_constraintTop_toTopOf="@id/iv_shopIcon"
                app:layout_constraintBottom_toBottomOf="@id/iv_shopIcon"
                app:layout_constraintStart_toEndOf="@id/tv_shopName"
                />

            <TextView
                android:id="@+id/tv_order_state"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="26px"
                android:textColor="@color/colorTheme"
                android:layout_marginEnd="24px"
                app:layout_constraintTop_toTopOf="@id/iv_shopIcon"
                app:layout_constraintBottom_toBottomOf="@id/iv_shopIcon"
                app:layout_constraintEnd_toEndOf="parent"
                />

            <ImageView
                android:id="@+id/iv_goods_img"
                android:layout_width="160px"
                android:layout_height="160px"
                android:layout_marginTop="27px"
                app:layout_constraintStart_toStartOf="@id/iv_shopIcon"
                app:layout_constraintTop_toBottomOf="@id/iv_shopIcon"/>



        </androidx.constraintlayout.widget.ConstraintLayout>

    </LinearLayout>
</layout>
