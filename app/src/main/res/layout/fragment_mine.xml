<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <variable
            name="viewModel"
            type="com.example.myapplication.mvvm.vm.mine.MineViewModel" />
    </data>

    <com.example.base.views.UiAdapterConstrainLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/gl_v_begin_12dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_begin="12dp" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/gl_v_end_12dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_end="12dp"/>

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/gl_h_start"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_begin="64dp"/>

        <ImageView
            android:id="@+id/iv_head_portrait"
            style="@style/mine_head_portrait"
            android:src="@drawable/ic_waimai_brand"
            app:layout_constraintStart_toStartOf="@id/gl_v_begin_12dp"
            app:layout_constraintTop_toTopOf="@id/gl_h_start" />

        <TextView
            android:id="@+id/tv_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:textSize="@dimen/mine_tv_name_font_size"
            android:maxWidth="180dp"
            android:maxLines="1"
            android:text="@string/login_please"
            app:layout_constraintStart_toEndOf="@id/iv_head_portrait"
            app:layout_constraintTop_toTopOf="@id/iv_head_portrait"/>

        <TextView
            android:id="@+id/tv_signature"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:includeFontPadding="false"
            android:layout_marginTop="12dp"
            android:maxWidth="190dp"
            android:maxLines="1"
            android:textSize="@dimen/mine_tv_signature_font_size"
            app:layout_constraintTop_toBottomOf="@id/tv_name"
            app:layout_constraintStart_toStartOf="@id/tv_name" />

        <ImageView
            android:id="@+id/iv_message"
            style="@style/mine_head_icon"
            android:src="@drawable/ic_mine_message"
            app:layout_constraintTop_toTopOf="@id/gl_h_start"
            app:layout_constraintEnd_toStartOf="@id/gl_v_end_12dp"/>

        <ImageView
            android:id="@+id/iv_setting"
            style="@style/mine_head_icon"
            android:src="@drawable/ic_mine_setting"
            android:layout_marginEnd="14.5dp"
            app:layout_constraintTop_toTopOf="@id/iv_message"
            app:layout_constraintEnd_toStartOf="@id/iv_message"/>

        <ImageView
            android:id="@+id/iv_change_skin"
            style="@style/mine_head_icon"
            android:src="@drawable/ic_change_skin"
            android:layout_marginEnd="14.5dp"
            app:layout_constraintTop_toTopOf="@id/iv_message"
            app:layout_constraintEnd_toStartOf="@id/iv_setting"/>


        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recycler_top_data"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_marginTop="27dp"
            android:overScrollMode="never"
            app:layout_constraintStart_toStartOf="@id/gl_v_begin_12dp"
            app:layout_constraintEnd_toEndOf="@id/gl_v_end_12dp"
            app:layout_constraintTop_toBottomOf="@id/iv_head_portrait"/>


        <ScrollView
            android:id="@+id/scrollView_bottom"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingStart="@dimen/interval_size_xs"
                android:paddingEnd="@dimen/interval_size_xs">

                <!--      透明布局      -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="105dp"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <!--                android:background=""-->

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/recycler_good_logistics"
                        style="@style/card_grid_recycler_view"
                        android:layout_width="match_parent"
                        android:layout_height="84dp"
                        android:layout_marginTop="31dp" />

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/more_recommended_recycler"
                        style="@style/card_grid_recycler_view"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="12dp"/>
                </LinearLayout>

            </LinearLayout>

        </ScrollView>
    </com.example.base.views.UiAdapterConstrainLayout>


    
</layout>