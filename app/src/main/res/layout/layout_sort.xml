<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/background">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/tv_sort_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:includeFontPadding="false"
            android:textSize="@dimen/font_size_28"
            android:textColor="@color/text_normal"
            android:drawablePadding="8px"
            android:text="综合排序"
            android:drawableRight="@drawable/ic_arrow_down_gray_solid"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:includeFontPadding="false"
            android:textSize="@dimen/font_size_26"
            android:textColor="@color/text_uncheck"
            android:text="距离"
            android:layout_marginStart="56px"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:includeFontPadding="false"
            android:textSize="@dimen/font_size_26"
            android:textColor="@color/text_uncheck"
            android:layout_marginStart="56px"
            android:text="销量"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="@dimen/interval_size_xs">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:includeFontPadding="false"
            android:paddingTop="16px"
            android:paddingBottom="16px"
            android:paddingStart="24px"
            android:paddingEnd="24px"
            android:background="@drawable/sr_main_tab_bg_panel"
            android:textSize="20px"
            android:textColor="@color/text_uncheck"
            android:text="津贴优惠"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:includeFontPadding="false"
            android:layout_marginStart="16px"
            android:paddingTop="16px"
            android:paddingBottom="16px"
            android:paddingStart="24px"
            android:paddingEnd="24px"
            android:background="@drawable/sr_main_tab_bg_panel"
            android:textSize="20px"
            android:textColor="@color/text_uncheck"
            android:text="津贴优惠"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:includeFontPadding="false"
            android:layout_marginStart="16px"
            android:paddingTop="16px"
            android:paddingBottom="16px"
            android:paddingStart="24px"
            android:paddingEnd="24px"
            android:background="@drawable/sr_main_tab_bg_panel"
            android:textSize="20px"
            android:textColor="@color/text_uncheck"
            android:text="津贴优惠"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:includeFontPadding="false"
            android:layout_marginStart="16px"
            android:paddingTop="16px"
            android:paddingBottom="16px"
            android:paddingStart="24px"
            android:paddingEnd="24px"
            android:background="@drawable/sr_main_tab_bg_panel"
            android:textSize="20px"
            android:textColor="@color/text_uncheck"
            android:text="津贴优惠"/>

    </LinearLayout>

</LinearLayout>