<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/background">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/tv_sort_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:includeFontPadding="false"
            android:textSize="@dimen/font_size_28"
            android:textColor="@color/text_normal"
            android:drawablePadding="8px"
            android:text="综合排序"
            android:drawableRight="@drawable/ic_arrow_down_gray_solid"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:includeFontPadding="false"
            android:textSize="@dimen/font_size_26"
            android:textColor="@color/text_uncheck"
            android:text="距离"
            android:layout_marginStart="56px"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:includeFontPadding="false"
            android:textSize="@dimen/font_size_26"
            android:textColor="@color/text_uncheck"
            android:layout_marginStart="56px"
            android:text="销量"/>
    </LinearLayout>

    <com.xuexiang.xui.widget.flowlayout.FlowTagLayout
        android:id="@+id/flowlayout_preferential"
        android:layout_width="match_parent"
        android:layout_height="100px"/>

</LinearLayout>