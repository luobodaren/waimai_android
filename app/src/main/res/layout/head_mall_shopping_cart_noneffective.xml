<?xml version="1.0" encoding="utf-8"?>
<com.life.base.views.UiAdapterConstrainLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_vertical"
    android:orientation="horizontal">

    <TextView
        android:id="@+id/tv_noneffective_count"
        style="@style/text_my_simple_style"
        android:layout_marginStart="@dimen/interval_size_xs"
        android:textColor="@color/text_normal"
        android:textSize="30px"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="失效商品2件" />

    <TextView
        android:id="@+id/tv_clean_noneffective_goods"
        style="@style/text_my_simple_style"
        android:layout_marginEnd="@dimen/interval_size_xs"
        android:text="@string/clean_noneffective_goods"
        android:textColor="@color/colorAssist_2"
        android:textSize="28px"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_move_to_favorites"
        style="@style/text_my_simple_style"
        android:layout_marginEnd="30px"
        android:text="@string/move_to_favorites"
        android:textColor="@color/colorAssist_2"
        android:textSize="28px"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@id/tv_clean_noneffective_goods"
        app:layout_constraintTop_toTopOf="parent" />

</com.life.base.views.UiAdapterConstrainLayout>