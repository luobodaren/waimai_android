<?xml version="1.0" encoding="utf-8"?>
<com.life.base.views.UiAdapterLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/layout_group"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/layout_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/iv_selected"
            android:layout_width="6px"
            android:layout_height="0px"
            android:background="@drawable/sr_widght_vertical_bar_theme"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:visibility="gone"/>

        <TextView
            android:id="@+id/tv_group"
            style="@style/text_my_simple_style"
            android:background="@color/transparent"
            android:layout_marginTop="20px"
            android:layout_marginBottom="20px"
            android:textSize="26px"
            android:singleLine="true"
            android:drawablePadding="5px"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>
    </androidx.constraintlayout.widget.ConstraintLayout>

    <include
        android:id="@+id/layout_room_for_shopping_cart_bar"
        layout="@layout/widget_room_for_shopping_card"/>

</com.life.base.views.UiAdapterLinearLayout>