<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <variable
            name="goods"
            type="com.example.myapplication.bean.Goods" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="32px">

        <ImageView
            android:id="@+id/iv_goods_img"
            android:layout_width="160px"
            android:layout_height="160px"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tv_goods_name"
            android:layout_width="336px"
            android:layout_height="wrap_content"
            android:maxLines="2"
            android:textSize="30px"
            android:textColor="@color/text_normal"
            android:text="@{goods.name}"
            app:layout_constraintTop_toTopOf="@id/iv_goods_img"
            app:layout_constraintStart_toEndOf="@id/iv_goods_img"
            android:layout_marginStart="24px"
            android:includeFontPadding="false" />

        <TextView
            android:id="@+id/tv_good_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="26px"
            android:textColor="@color/text_normal"
            android:includeFontPadding="false"
            android:text="@{goods.price}"
            app:layout_constraintTop_toTopOf="@id/tv_goods_name"
            app:layout_constraintEnd_toEndOf="parent" />

        <TextView
            android:id="@+id/tv_good_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="26px"
            android:textColor="@color/text_tip"
            android:includeFontPadding="false"
            android:layout_marginTop="17px"
            android:text="@{goods.buyNum}"
            app:layout_constraintTop_toBottomOf="@id/tv_good_price"
            app:layout_constraintEnd_toEndOf="@id/tv_good_price" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
