<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <data>

    </data>

    <com.life.base.views.UiAdapterLinearLayout
        android:id="@+id/my_ll_content_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@color/white">

        <LinearLayout
            android:id="@+id/search_layout"
            android:layout_width="match_parent"
            android:layout_height="88px"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:paddingStart="@dimen/interval_size_xs"
            android:paddingEnd="@dimen/interval_size_xs">

            <ImageView
                android:id="@+id/iv_left_action"
                android:layout_width="44px"
                android:layout_height="44px"
                android:src="@drawable/ic_arrow_left_black"/>

            <EditText
                android:id="@+id/et_search"
                android:layout_width="0dp"
                android:layout_height="60px"
                android:layout_weight="1"
                android:drawableStart="@drawable/ic_search_gray"
                android:drawablePadding="8px"
                android:background="@drawable/sr_bg_search"
                android:gravity="center_vertical"
                android:layout_marginStart="16px"
                android:paddingStart="24px"
                android:textSize="@dimen/font_size_26"
                android:hint="搜索你需要的商品热门关键词"
                android:textColorHint="@color/text_tip"/>

            <ImageView
                android:id="@+id/bt_search"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:scaleType="centerCrop"
                android:background="@drawable/ic_message_black"
                android:layout_marginStart="24px"
                android:focusable="false"
                android:clickable="false" />

        </LinearLayout>

        <com.kunminx.linkage.LinkageRecyclerView
            android:id="@+id/linkage_waimai_type"
            android:layout_width="match_parent"
            android:layout_height="0px"
            android:layout_weight="1"/>

    </com.life.base.views.UiAdapterLinearLayout>
</layout>