<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/sr_bg_full_corners_gray_translucent"
    android:gravity="center_vertical"
    android:orientation="horizontal"
    android:paddingStart="8px"
    android:paddingTop="3px"
    android:paddingEnd="8px"
    android:paddingBottom="3px">

    <TextView
        style="@style/text_my_simple_style"
        android:text="@string/comprehensive_experience"
        android:textColor="@color/white"
        android:textSize="20px" />

    <ImageView
        android:id="@+id/iv_1"
        android:layout_width="16px"
        android:layout_height="16px"
        android:layout_marginStart="2px"
        android:scaleType="centerCrop"
        tools:src="@drawable/ic_star_red" />

    <ImageView
        android:id="@+id/iv_2"
        android:layout_width="16px"
        android:layout_height="16px"
        android:scaleType="centerCrop"
        tools:src="@drawable/ic_star_red" />

    <ImageView
        android:id="@+id/iv_3"
        android:layout_width="16px"
        android:layout_height="16px"
        android:scaleType="centerCrop"
        tools:src="@drawable/ic_star_red" />

    <ImageView
        android:id="@+id/iv_4"
        android:layout_width="16px"
        android:layout_height="16px"
        android:scaleType="centerCrop"
        tools:src="@drawable/ic_star_red" />

    <ImageView
        android:id="@+id/iv_5"
        android:layout_width="16px"
        android:layout_height="16px"
        android:scaleType="centerCrop"
        tools:src="@drawable/ic_star_red" />
</LinearLayout>